@model User
@{
    Layout = null; // Optional, remove if you're using a shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travelista Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: url('../UserAssets/img/loginimg.jfif') center/cover no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.5);
            backdrop-filter: blur(4px);
            z-index: 0;
        }

        .container {
            position: relative;
            background: rgba(255,255,255,0.9);
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 12px 32px rgba(0,0,0,0.25);
            width: 350px;
            z-index: 1;
        }

        .logo h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #333;
            text-align: center;
            margin-bottom: 1rem;
        }

        .title h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #333;
            text-align: center;
            margin: 0 auto 1.5rem auto;
            padding-bottom: 0.5rem;
            width: fit-content;
            border-bottom: 3px solid #ffc107;
        }

        .input-group {
            position: relative;
            margin-bottom: 1.25rem;
        }

            .input-group label {
                position: absolute;
                top: -0.6rem;
                left: 1rem;
                background: rgba(255,255,255,0.9);
                padding: 0 0.25rem;
                font-size: 0.875rem;
                color: #666;
            }

            .input-group input {
                width: 100%;
                padding: 1rem;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 1rem;
                transition: border-color 0.3s;
            }

            .input-group:hover input {
                border-color: #ffc107;
            }

            .input-group input:focus {
                outline: none;
                border-color: #ff9800;
            }

        .btn {
            width: 100%;
            padding: 0.75rem;
            background-color: #ffc107;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn:hover {
                background-color: #e0a800;
                transform: translateY(-2px);
            }

        .footer-text {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.875rem;
            color: #666;
        }

            .footer-text a {
                color: #ffc107;
                text-decoration: none;
            }

        .error-box {
            background-color: #ffe0e0;
            border: 1px solid #ff4d4f;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            color: #b30000;
            font-size: 0.9rem;
            text-align: center;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="overlay"></div>
    <div class="container">
        <div class="logo"><h1>Travelista</h1></div>
        <div class="title"><h2>Login</h2></div>

        <form method="post">
            <div class="input-group">
                <label for="login-email">Email Address</label>
                <input type="email" asp-for="Email" placeholder="you@example.com" required>
            </div>

            <div class="input-group">
                <label for="login-password">Password</label>
                <input type="password" asp-for="Password" placeholder="******" required>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.err as string))
            {
                <div class="error-box">
                    @ViewBag.err
                </div>
            }

            <button type="submit" class="btn">Log In</button>
        </form>

        <p class="footer-text">
            Don't have an account?
            <a asp-controller="User" asp-action="SignUp">Sign Up</a>
        </p>
    </div>
</body>
</html>