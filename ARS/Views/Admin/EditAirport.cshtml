@model Airport
@{
    ViewData["Title"] = "EditAirport";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<style>
    .msg {
        color: green;
    }
</style>


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <div class="card-header">
                <h3 class="text-center font-weight-light my-4">Edit Airport</h3>
            </div>
            <div class="card-body">
                <h4 class="msg">@ViewBag.msg</h4>
                <form method="post">
                    <input type="hidden" asp-for="AirportId" />
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mb-md-0">
                                <input class="form-control mt-2" type="text" placeholder="Enter Airport Name" asp-for="Name" />
                                <label asp-for="Name">Airport Name</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3 mb-md-0">
                                <input class="form-control mt-2" type="text" placeholder="Enter IATA Code" asp-for="IATACode" />
                                <label asp-for="IATACode">IATA Code</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3 mb-md-0">
                                <select asp-for="CityId" asp-items="@ViewBag.cities" class="form-select mt-2">
                                    <option>Select a city</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 mb-0">
                        <div class="d-grid"><button type="submit" class="btn btn-primary btn-block">Edit Airport</button></div>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>